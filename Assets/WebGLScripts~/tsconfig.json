{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": true,
  },
  "include": [
    "src",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}